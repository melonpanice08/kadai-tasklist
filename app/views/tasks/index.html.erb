<% if logged_in? %>
  <h1>タスク一覧</h1>

  <% if @tasks.any? %>
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>task id</th>
          <th>タスク</th>
          <th>進捗</th>
        </tr>
      </thead>
      <tbody>
        <% @tasks.each do |task| %>
          <tr>
            <td><%= link_to task.id, task %></td>
            <td><%= task.content %></td>
            <td><%= task.status%></td>
             
             <!--% user = task.user %-->
             <!--<td><!--%= user.name%></td>-->
          </tr>
        <% end %>
      </tbody>
    </table>
    <div>
      <%= paginate @tasks %>
    </div>
  <% end %>

  <%= link_to 'あたらしいタスクの登録', new_task_path, class: "btn btn-primary"  %>
  
<% else %>
  <div class="center jumbotron">
    <div class="text-center">
      <h1>Task List</h1>
      <%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
<% end %>
