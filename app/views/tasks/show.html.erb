<h1><%= @task.id %>番 :タスクの詳細</h1>


<table class="table table-bordered">
  <tr>
    <th>id</th>
    <td><%= @task.id %></td>
  </tr>
  <tr>
  
    <th>タスク</th>
    <td><%= @task.content %></td>
  </tr>
  <tr>
    <th>進捗</th>
    <td><%= @task.status %></td>
  </tr>
</table>



<!--デザイン時削除-->
<!--%= link_to 'タスク一覧に戻る', tasks_path %-->
<%= link_to 'このタスクを編集する', edit_task_path(@task),class: 'btn btn-default' %>
<%= link_to 'このタスクを削除する', @task, method: :delete, 
data: { confirm: '本当に削除していいですか？' } ,class: 'btn btn-danger'%>